{
  "ConnectionStrings": {
    "Default": "Data Source = Recipe.db"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Infrastructure": "Warning",
        "CRUDRecipeEF.BL.DL": "Debug",
        "CRUDRecipeEF.PL": "Debug"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\CRUDRecipeEF.log",
          "outputTemplate": "[{Timestamp:MM/dd HH:mm:ss.fff} {Level:u3}]: {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\CRUDRecipeEF.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:1299"
        }
      }
    ]
  }
}